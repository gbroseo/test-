---
import { ArrowRight, ExternalLink } from 'lucide-astro';
// 1. 引入图片组件和你的 Logo 文件
import { Image } from 'astro:assets';
import MyLogo from '../media/Grboseo_logo-01.svg';

interface Props {
  title?: string;
  description?: string;
  buttonText?: string;
  buttonUrl?: string;
}

const { 
  title = "你准备好设计高级视觉了吗?",
  description = "从灵感到爆款，只差一次点击，把你的作品发布到社媒。一切皆有可能，让每一次创作，都变成询盘机会。",
  buttonText = "下载免费试用",
  buttonUrl = "https://mega.nz/folder/mw1DWCpL#7Ad1OQGdfYtNEDm9wptl1A"
} = Astro.props;
---

<section class="relative py-32 md:py-40 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-primary via-primary-dark to-primary"></div>
    
    <div class="absolute inset-0 opacity-10">
        <div class="absolute inset-0 bg-[linear-gradient(to_right,white_1px,transparent_1px),linear-gradient(to_bottom,white_1px,transparent_1px)] bg-[size:4rem_4rem]"></div>
    </div>
    
    <div class="absolute top-0 left-1/4 w-96 h-96 bg-white/10 rounded-full blur-[100px]"></div>
    <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-primary-light/20 rounded-full blur-[100px]"></div>
    
    <div class="absolute top-20 right-[20%] w-20 h-20 border border-white/20 rounded-full animate-bounce"></div>
    <div class="absolute bottom-20 left-[15%] w-12 h-12 bg-white/10 rounded-lg rotate-45 animate-pulse"></div>
    <div class="absolute top-1/2 right-[10%] w-3 h-3 bg-white rounded-full animate-ping"></div>
    
    <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-4xl mx-auto text-center">
            <div class="inline-flex items-center justify-center w-20 h-20 mb-8 bg-white/10 backdrop-blur-sm rounded-3xl border border-white/20 p-4">
                <Image src={MyLogo} alt="Logo" class="w-full h-full object-contain" />
            </div>
            
            <h2 class="text-4xl sm:text-5xl md:text-6xl font-black text-white mb-6 tracking-tight">
                {title}
            </h2>
            
            <p class="text-lg md:text-xl text-white/80 mb-12 leading-relaxed max-w-2xl mx-auto">
                {description}
            </p>
            
            <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
                <a 
                    href={buttonUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="group relative inline-flex items-center justify-center gap-3 px-8 py-4 bg-white text-primary-dark rounded-2xl font-bold text-lg shadow-2xl hover:shadow-white/25 hover:-translate-y-1 transition-all duration-300 overflow-hidden cursor-pointer"
                >
                    <span class="absolute inset-0 bg-gradient-to-r from-surface to-white opacity-0 group-hover:opacity-100 transition-opacity duration-300"></span>
                    <span class="relative z-10">{buttonText}</span>
                    <ArrowRight class="w-5 h-5 relative z-10 group-hover:translate-x-1 transition-transform duration-300" />
                </a>

                <a 
                    href="#"
                    class="inline-flex items-center gap-2 px-6 py-4 text-white/90 hover:text-white font-semibold transition-colors duration-300 cursor-pointer"
                >
                    <span>查看案列</span>
                    <ExternalLink class="w-4 h-4" />
                </a>
            </div>
            </div>
    </div>
</section>