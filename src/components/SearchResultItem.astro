/**
 * SearchResultItem Component
 * A reusable search result item using Tailwind CSS
 * Auto-generated by PhantomWP
 */
interface Props {
  url: string;
  title: string;
  excerpt?: string;
  date?: string;
  type?: string;
  showType?: boolean;
  image?: string;
  class?: string;
}

const { url, title, excerpt, date, type, showType = false, image, class: className = "" } = Astro.props;

function formatDate(dateString: string) {
  try {
    return new Date(dateString).toLocaleDateString('en-US', { 
      year: 'numeric', 
      month: 'short', 
      day: 'numeric' 
    });
  } catch { 
    return ''; 
  }
}
---

<a 
  href={url} 
  class={`group flex gap-4 p-4 bg-white/90 dark:bg-gray-800/90 border border-gray-200 dark:border-gray-700 rounded-xl no-underline text-inherit transition-all duration-200 cursor-pointer backdrop-blur-sm hover:border-blue-500 hover:shadow-lg hover:-translate-y-0.5 ${className}`}
>
  {image && (
    <div class="shrink-0 w-20 h-20 rounded-lg overflow-hidden bg-gray-200 dark:bg-gray-700">
      <img src={image} alt={title} loading="lazy" class="w-full h-full object-cover" />
    </div>
  )}
  
  <div class="flex-1 min-w-0 text-left">
    <h3 class="font-semibold text-base text-gray-800 dark:text-gray-100 m-0 mb-1 overflow-hidden text-ellipsis whitespace-nowrap transition-colors duration-200 group-hover:text-blue-500 text-left">
      {title}
    </h3>
    
    {excerpt && (
      <p class="text-sm text-gray-500 dark:text-gray-400 leading-relaxed m-0 mb-2 line-clamp-2 text-left">
        {excerpt}
      </p>
    )}
    
    <div class="flex items-center gap-3 text-xs text-gray-500 dark:text-gray-400">
      {showType && type && (
        <span class="inline-flex items-center px-2 py-0.5 rounded-full bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 font-medium capitalize">
          {type}
        </span>
      )}
      {date && (
        <time datetime={date}>{formatDate(date)}</time>
      )}
    </div>
  </div>
  
  <div class="shrink-0 self-center opacity-0 transition-opacity duration-200 group-hover:opacity-100">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 text-gray-400">
      <path d="m9 18 6-6-6-6"/>
    </svg>
  </div>
</a>
